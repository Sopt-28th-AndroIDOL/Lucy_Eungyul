<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/textview_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "이름"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editext_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력해주세요"
        app:layout_constraintTop_toBottomOf="@+id/textview_signup_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_signup_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "깃허브 아이디"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/editext_signup_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editext_signup_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID를 입력해주세요"
        app:layout_constraintTop_toBottomOf="@+id/textview_signup_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_signup_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "비밀번호"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/editext_signup_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editext_signup_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번를 입력해주세요"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/textview_signup_pwd"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/purple_700"
        android:text="SIGNUP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editext_signup_pwd" />

</androidx.constraintlayout.widget.ConstraintLayout>